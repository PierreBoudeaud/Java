import java.util.ArrayList;

public class Classe {
	private int effectifMax;
	//Création de la liste
	private ArrayList<Eleve> classe;
	
	//Constructeur de l'objet Classe
	public Classe(){
		this.effectifMax = 4;
		//On crée l'espace mémoire pour la liste classe
		this.classe = new ArrayList<Eleve>();
	}
	
	//Ajoute un élève dans classe
	public void ajoutEleve(Eleve el){
		this.classe.add(el);
	}
	
	public void supprimerEleve(){
		int index;
		
		this.classe.remove(index); // index = identifiant
	}
	
	public int rechercheEleve(String nom){
		int index, nbmax, i;
		
		i = 0;
		nbmax = this.classe.size();
		while(i < nbmax && this.classe.get(i).getNom().compareTo(nom) < 0){
			i++;
		}
		
		return index;
	}
}
